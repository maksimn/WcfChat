<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>

  <system.serviceModel>
    <services>
      <service name="WcfChat.Services.ChatService">
        <endpoint address="net.tcp://localhost:8010/ChatService" 
                  binding="netTcpBinding" 
                  contract="WcfChat.Contracts.Service.IChatService" />
      </service>
    </services>
    <bindings>
      <netTcpBinding>
        <binding>
          <security mode="Transport">
            <transport protectionLevel="EncryptAndSign" clientCredentialType="Windows" />
          </security>
        </binding>
      </netTcpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
  
</configuration>